{
    "name": "@ionaru/web-server",
    "version": "4.1.1",
    "description": "My package web-server",
    "bin": "dist/index.js",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "eslint --ext ts --max-warnings 0 --ignore-pattern *.spec.ts src",
        "lint:test": "eslint --ext ts --plugin jest --env jest/globals src/**/*.spec.ts",
        "pretest": "npm run lint",
        "test": "jest src",
        "posttest": "codecov -f coverage/*.json",
        "prepare": "npm run build",
        "preversion": "npm run test"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "keywords": [],
    "author": "Jeroen Akkerman",
    "repository": "github:Ionaru/web-server",
    "license": "MIT",
    "devDependencies": {
        "@ionaru/eslint-config": "^3.0.0",
        "@types/debug": "^4.1.5",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.20.0",
        "codecov": "^3.8.1",
        "debug": "^4.3.1",
        "eslint": "^7.23.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.3.2",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-sonarjs": "^0.6.0",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.4",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3"
    },
    "peerDependencies": {
        "debug": "^4.3.1"
    }
}
